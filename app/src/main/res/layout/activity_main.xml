<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Куда пойдём есть?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />
    <FrameLayout
        android:id="@+id/wheelContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="20dp">

        <!-- Колесо -->
        <com.example.wheelfortune.WheelView
            android:id="@+id/wheelView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Стрелка в центре круга -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:rotation="90"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="Указатель" />
    </FrameLayout>

    <Button
        android:id="@+id/btnSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wheelContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:text="Крутить"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSpin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#d32f2f" />

</RelativeLayout>